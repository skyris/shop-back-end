{
  "compilerOptions": {
    "lib": [
      "es2020",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": ".build",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es2020",
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
